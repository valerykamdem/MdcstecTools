@page "/"
@attribute [Authorize]

<PageTitle>Dashboard</PageTitle>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h4" GutterBottom="true" Align="Align.Center">MDCSTEC TOOLS</MudText>
    </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudLink Href="hw-files" Underline="Underline.None">
                <MudPaper Elevation="2" Class="d-flex flex-row pt-6 pb-4" Style="height: 125px;">
                    <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Primary" Style="font-size: 6rem;" Class="mx-4" />
                    <div>
                        <MudText Class="d-flex flex-row" Typo="Typo.h5"><b>HW ANALYSIS</b></MudText>
                        <MudText Class="d-flex flex-row" Typo="Typo.h6">HW Data</MudText>
                    </div>
                </MudPaper>
                </MudLink>
                <MudExpansionPanels>
                    <MudExpansionPanel Text="More info" MaxHeight="75" Class="mud-theme-primary">
                        HW ANALYSIS
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudLink Href="controller-files" Underline="Underline.None">
