            <MudItem xs="12" sm="6" md="3">
                 <MudLink Href="config-files" Underline="Underline.None">
                <MudPaper Elevation="2" Class="d-flex flex-row pt-6 pb-4" Style="height: 125px;">
                    <MudIcon Icon="@Icons.Material.Filled.Assessment" Color="Color.Tertiary" Style="font-size: 6rem;" Class="mx-4" />
                    <div>
                        <MudText Class="d-flex flex-row" Typo="Typo.h5"><b>CONFIG ANALYSIS</b></MudText>
