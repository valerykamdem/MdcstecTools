                </MudPaper>
                </MudLink>
                <MudExpansionPanels>
                    <MudExpansionPanel Text="More info" MaxHeight="75" Class="mud-theme-secondary">
                        CONTROLLER ANALYSIS
                    </MudExpansionPanel>
                </MudExpansionPanels>
