                 <MudLink Href="generate-pdf-files" Underline="Underline.None">
                <MudPaper Elevation="2" Class="d-flex flex-row pt-6 pb-4" Style="height: 125px;">
                    <MudIcon Icon="@Icons.Material.Filled.Print" Color="Color.Warning" Style="font-size: 6rem;" Class="mx-4" />
                    <div>
                        <MudText Class="d-flex flex-row" Typo="Typo.h5"><b>PDF DATA</b></MudText>
